  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "preLaunchTask": "create/activate venv",
      "cwd": "${workspaceFolder}/app",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "pgtester",
        "FLASK_RUN_PORT": "5000",
        "FLASK_DEBUG": "1",
        "PYTHONUNBUFFERED": "1"
      },
      "args": [
        "run",
        "--no-debugger", // .ðŸ‘‰ https://flask.palletsprojects.com/en/2.3.x/debugging/#external-debuggers
        "--no-reload"
      ],
      "jinja": true,
      "justMyCode": true,
    },
    {
      "name": "Python: Init database",
      "type": "debugpy",
      "preLaunchTask": "create/activate venv",
      "cwd": "${workspaceFolder}/app",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "pgtester"
      },
      "args": [
        "init-db",
        "--reset"
      ],
      "justMyCode": true,
    }
  ]
}
